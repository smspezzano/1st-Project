<form>
	<div id='startL'>
<h3>Start Location: </h3><input type="text" id='startLocation' name="startLocation" size="60" value="<%= params["startLocation"] %>">
	</div>
	<div id='endL'>
<h3>End Location: </h3><input type="text" id='endLocation' name="endLocation" size="60" value="<%= params["endLocation"]%>">
	</div>
<h3>Road Strategy Guide:</h3>

<% @strategies.each do |strategy| %>

<input class="roadGradeStrategy" name="roadGradeStrategy" 
type="radio" value="<%=strategy[0]%>" <%= "checked='checked'" if strategy[0].to_s == params[:roadGradeStrategy] %> />
<label for="<%=strategy[0]%>"><%= strategy[1]%></label>

<%end%>
	
<br>

<input type="submit" class="btn btn-primary" name="route" value="Submit" onclick="showBtn()" >

</form>